{
  "name": "@webtre/nestjs-mailer-react-adapter",
  "version": "0.2.5",
  "description": "Build and send emails in Nest framework using React.js",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "engines": {
    "node": "^18.19.1 || ^20.11.1 || >=22.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webtretech/nestjs-mailer-react-adapter.git"
  },
  "author": "Lawrence Onah <paplow01@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webtretech/nestjs-mailer-react-adapter/issues"
  },
  "homepage": "https://github.com/webtretech/nestjs-mailer-react-adapter#readme",
  "dependencies": {
    "@react-email/render": "1.0.2",
    "locter": "^2.1.6"
  },
  "peerDependencies": {
    "@nestjs-modules/mailer": "^2.0.0"
  },
  "devDependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "keywords": [
    "nestjs",
    "mailer",
    "module",
    "email",
    "nodemailer",
    "nodejs",
    "mail",
    "nest",
    "reactjs",
    "nestjs-mailer",
    "node",
    "react",
    "mailer-module",
    "adapter"
  ]
}
